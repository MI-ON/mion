{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "target": "es2017",
    "lib": [ "ESNext" ],
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@graphql/*": ["src/graphql/*"],
      "@modules/*": ["src/modules/*"],
      "@repositories": ["src/repositories"],
      "@repositories/*": ["src/repositories/*"],
      "@entities": ["src/entities"],
      "@entities/*": ["src/entities/*"],
    },
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "./node_modules/",
    "./dist/"
  ]
}
